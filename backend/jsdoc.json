{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
        "include":["controllers"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
 
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts":{
        "destination":"./jsdoc",
        "recurse":true,
        "readme":"./readme.md"

    }
}

